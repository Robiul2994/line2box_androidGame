<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape>
            <corners android:radius="15dp" />
            <padding
                android:bottom="6dp"
                android:left="6dp"
                android:right="6dp"
                android:top="6dp" />

            <stroke
                android:width="10dp"
                android:color="@color/cocZz" />

        </shape>
    </item>
    <!-- Drop Shadow Stack -->

    <!-- Background -->
    <item>
        <shape>

            <corners android:radius="15dp" />
            <gradient
                android:angle="90"
                android:centerColor="#B7B185"
                android:endColor="@color/cocZ"
                android:startColor="@color/cocZ"
                android:type="linear" />
        </shape>
    </item>


</layer-list>