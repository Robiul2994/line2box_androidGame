<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".StartActivity">


    <ImageView
        android:id="@+id/background_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/background"
        android:scaleType="centerCrop"
        android:src="@drawable/bg1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <fragment
            android:id="@+id/disFragment"
            android:name="com.diu.yk_games.line2box.BlankFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:contentDescription="@string/background"
            android:src="@drawable/logo" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/vsRadioGrp"


            >

            <RadioButton
                android:id="@+id/radioBtnHuman"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_selector"
                android:button="@null"
                android:checked="true"
                android:drawableStart="@drawable/human_logo"
                android:drawableEnd="@drawable/human_logo"
                android:gravity="center"
                android:padding="20dp"
                android:text="vs"
                android:fontFamily="@font/sortie"
                android:textSize="20dp"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radioBtnAi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_selector"
                android:button="@null"
                android:drawableStart="@drawable/human_logo"
                android:drawableEnd="@drawable/ai_logo"
                android:gravity="center"
                android:padding="20dp"
                android:fontFamily="@font/sortie"
                android:textSize="20sp"
                android:text="vs"
                android:textColor="@color/white" />


        </RadioGroup>

        <Button
            android:id="@+id/startBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/alert_dialog_btn2_bg"
            android:fontFamily="@font/sortie"
            android:onClick="startBtn"
            android:paddingLeft="50dp"
            android:paddingTop="20dp"
            android:paddingRight="50dp"
            android:paddingBottom="20dp"
            android:text="@string/start"
            android:textColor="@color/white"
            android:textSize="60sp" />
    </LinearLayout>


</FrameLayout>